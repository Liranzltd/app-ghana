{% trans_default_domain 'FOSUserBundle' %}
<form id="form-reset-pwd" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" method="POST" class="fos_user_resetting_reset">
    <div class="form-group form-group-default">
        <div class="controls">
            <div id="fos_user_resetting_form">
                <div>
                  <label for="username">{{ 'form.new_password'|trans({}, 'FOSUserBundle') }}</label>
                  <input type="password" id="fos_user_resetting_form_plainPassword_first" class="form-control" name="fos_user_resetting_form[plainPassword][first]" placeholder="At least 8 characters, including UPPER/lowercase and numbers." required="required" aria-required="true"   pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">
                </div>
            </div>
        </div>
    </div>
    <div class="form-group form-group-default">
        <div class="controls">
            <div id="fos_user_resetting_form">
                <div>
                  <label for="username">{{ 'form.new_password_confirmation'|trans({}, 'FOSUserBundle') }}</label>
                  <input type="password" id="fos_user_resetting_form_plainPassword_second" class="form-control" name="fos_user_resetting_form[plainPassword][second]" required="required" aria-required="true"   pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">
                </div>
            </div>
        </div>
    </div>
    <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn mb20 btn-large btn-transparent-primary" />
    {{ form_row(form._token) }}
</form>
